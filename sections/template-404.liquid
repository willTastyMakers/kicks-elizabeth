<div class="max-w-md">
	<div class="text-5xl font-bold my-4">
		{{ section.settings.title}}
	</div>
	<div class="my-4">
    	<p class="text-base md-text-xl leading-normal">
			{{section.settings.subtext_title}}
		</p>
	</div>
	<div class="my-4">
		{% if section.settings.button_url == blank %}
	    	{%  assign shop_url=shop.secure_url %}
		{% else %}
			{%  assign shop_url=section.settings.button_url %}
		{% endif %}
		<a
			href="{{ shop_url }}"
			class="px-4 inline py-2 bg-black text-base font-medium shadow bg-green-600 text-white rounded-lg hover:bg-green-800"
		>
			{{section.settings.button_label}}
		</a>
	</div>
</div>


{% schema  %}
	{
		"name": "Template 404",
	    "tag": "section",
	    "class": "flex items-center justify-center text-center py-7 h-screen",
		"settings": [
		  {
            "type": "text",
            "id": "title",
		    "default": "404",
			"label": "404 Heading Tile"
          },
		  {
			"type": "text",
			"id": "subtext_title",
			"default": "The page you are looking for does not exist.",
			"label": "404 Subtext Title"
		  },
		  {
			"type": "text",
			"id": "button_label",
			"default": "Back to Home",
			"label": "404 Button Label"
		  },
		  {
			"type": "url",
			"id": "button_url",
			"label": "Button URL"
          }
		  
		],
		"presets": [
			{
				"name": "404",
				"category": "404"
			}
		]
	}
{% endschema %}
